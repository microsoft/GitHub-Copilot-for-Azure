{
  "name": "azure-copilot-skills-tests",
  "version": "1.0.0",
  "description": "Test suite for Azure Copilot Skills",
  "private": true,
  "type": "module",
  "scripts": {
    "test": "node scripts/run-tests.js",
    "test:unit": "node scripts/run-tests.js unit",
    "test:integration": "node scripts/run-tests.js integration",
    "test:verbose": "node scripts/run-tests.js verbose",
    "test:coverage": "node scripts/run-tests.js coverage",
    "test:ci": "node scripts/run-tests.js ci",
    "test:watch": "node scripts/run-tests.js watch",
    "test:skill": "node scripts/run-tests.js skill",
    "coverage:grid": "node scripts/generate-coverage-grid.js",
    "report": "npx tsx scripts/generate-test-reports.ts",
    "results": "node scripts/show-test-results.js",
    "update:snapshots": "cross-env jest --updateSnapshot",
    "mergeSkillInvocationTestResult": "node scripts/generate-skill-invocation-test-summary.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint",
    "lint:fix": "eslint --fix"
  },
  "devDependencies": {
    "@azure/ai-projects": "^1.0.1",
    "@azure/identity": "^4.13.0",
    "@eslint/js": "^9.0.0",
    "@github/copilot-sdk": "^0.1.22",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.19",
    "cross-env": "^7.0.3",
    "eslint": "^9.0.0",
    "eslint-plugin-jest": "^28.0.0",
    "gray-matter": "^4.0.3",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "simple-git": "^3.30.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.0.0"
  },
  "jest-junit": {
    "outputDirectory": "./reports",
    "outputName": "junit.xml",
    "ancestorSeparator": " â€º ",
    "uniqueOutputName": false,
    "suiteNameTemplate": "{filepath}",
    "classNameTemplate": "{classname}",
    "titleTemplate": "{title}"
  }
}
