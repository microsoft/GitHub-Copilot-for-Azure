{
  "$schema": "https://aka.ms/azure/static-web-apps-cli/schema",
  "configurations": {
    "live": { // This is the configuration name
      "appLocation": "app", // The directory containing your front-end application code
      "apiLocation": "api", // The directory containing the back-end API code
      "outputLocation": "dist", // The directory where the built front-end app is located
      "dataApiLocation": "swa-db-connections", // The directory containing your database code
      "apiLanguage": "node", // The programming language used for the API
      "apiVersion": "16", // The version of the API runtime
      "appBuildCommand": "npm run build", // The command to build the front-end application
      "apiBuildCommand": "npm run build --if-present", // The command to build the API
      "run": "npm run dev",
      "appDevserverUrl": "http://localhost:5173",
      "appName": "swa-day-cli", // The name of the deployed static web app
      "resourceGroup": "testing-rg" // The Azure resource group for deployment
    }
  }
}
